<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}}<a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                  <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn-block btm-sm " type="submit">
                    Eliminar
                </button>
            </div>
        </div>
    </div>
    {{else}}
<div class="card mx-auto">
    <p class="card-body">
        <p class="lead">No existen notas todavia</p>
        <a href="/notes/add" class="btn btn-success btn-block">Crear una</a>
    </div>
</div>
    {{/each}}
</div>