<div class="row">
    <div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            Registro de cuenta
        </div>
        <div class="card-body">
       <form action="/users/signup" method="POST">
           <div class="from-group">
               <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{name}}">
           </div>
           <div class="from-group">
               <input type="email" class="form-control" name="email" placeholder="Correo Electronico" value="{{email}}">
           </div>
           <div class="from-group">
               <input type="password" class="form-control" name="password" placeholder="Contraseña" value="{{password}}">
           </div>
             <div class="from-group">
               <input type="password" class="form-control" name="confirm_password" placeholder="Contraseña" value="{{confirm_password}}">
           </div>
           <div class="form-group">
               <button type="submit" class="btn btn-primary btn-block">
                   Registrar
               </button>
           </div>
       </form>
        </div>
    </div>
    </div>
</div>